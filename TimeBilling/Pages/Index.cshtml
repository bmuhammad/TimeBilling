@page
@model TimeBilling.Pages.IndexModel
@{
    // var productName = "Time Billing Services";
    ViewBag.Title = "Home Page";
}

<h1>Time Billing</h1>
<p>Time Billing is a solution to billing for small companies and individualls.</p>

@if (Model.Customers is not null && Model.Customers.Count() > 0)
{
    <ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.CompanyName</li>
    }
    </ul>
}
else
{
    <div> No Customers Found</div>
}
